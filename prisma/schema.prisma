// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String              @id @default(cuid())
  name         String?
  email        String           @unique
  playlists     Playlist[]
}

model Genre {
  id            String       @id
  playlists     Playlist[]
  occurences    GenreOccurence[]
}

model Artist {
  id            String       @id
  name          String
  playlists     Playlist[]
  occurences    ArtistOccurence[]
}

model Playlist {
  id            String       @default(cuid()) @id
  playlistId    String
  name          String?
  numOfTracks   Int       @default(0)
  acousticness  Float?
  danceability  Float?
  energy        Float?
  valence       Float?
  duration      Int?
  createdAt     String  @map(name: "created_at")
  genres        Genre[]
  artists       Artist[]
  genreOccurences GenreOccurence[]
  artistOccurences ArtistOccurence[]
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  @@map(name: "playlists")
}

model GenreOccurence {
  id            String   @default(cuid()) @id
  genre         Genre   @relation(fields: [genreId], references: [id])
  genreId       String
  occurences    Int
  playlist      Playlist   @relation(fields: [playlistId], references: [id])
  playlistId    String
}

model ArtistOccurence {
  id            String   @default(cuid()) @id
  artist        Artist   @relation(fields: [artistId], references: [id])
  artistId      String
  occurences    Int
  playlist      Playlist   @relation(fields: [playlistId], references: [id])
  playlistId    String
}